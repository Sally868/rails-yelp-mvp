<h1 class="text-center">Restaurants</h1>
<table class="mx-auto">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <% restaurant.reviews.each do |review|%>
            <td><%= review.rating %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>



